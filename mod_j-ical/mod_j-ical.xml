<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>MOD_J-ICAL</name>
	<creationDate>07.02.2022</creationDate>
	<author>Lukas Schneider</author>
	<authorUrl>https://github.com/Jokr97</authorUrl>
	<license>GNU GENERAL PUBLIC LICENSE Version 3; see LICENSE</license>
	<version>1.0</version>
	<description>MOD_J-ICAL_XML_DESCRIPTION</description>

	<media folder="media" destination="mod_j-ical">
		<folder>css</folder>
		<folder>js</folder>
	</media>

	<files>
		<filename module="mod_j-ical">mod_j-ical.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>mod_j-ical.xml</filename>
	</files>

	<updateservers>
		<server type="extension" priority="1" name="[PROJECT_NAME]">https://github.com/Jokr97/joomla-calendar/update.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="url"
					label="MOD_FOO_URL_LABEL"
					description="MOD_FOO_URL_DESCRIPTION"
					hint="https://www.example.com"
					filter="url"
					validate="url"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
